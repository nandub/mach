Name:           @PACKAGE@
Version:        @VERSION@
Release:        @RELEASE@
Summary:        make a chroot.

Group:          Applications/System
License:	GPL
URL:            http://thomas.apestaart.org/projects/mach
Source:         http://thomas.apestaart.org/download/mach/%{name}-%{version}.tar.gz
Buildroot:      %{_tmppath}/%{name}-%{version}-root
BuildArch:	noarch

Requires:	python
Requires:	rpm
Requires:	rpm-python
Requires:	sudo

%description
mach makes a chroot.

Authors:
--------
Thomas Vander Stichele (thomas (at) apestaart (dot) org)

%prep
%setup

%build
%configure

%install
[ -n "%{buildroot}" -a "%{buildroot}" != / ] && rm -rf %{buildroot}
%makeinstall

install -d -m 775 %{buildroot}/%{_localstatedir}/lib/mach/states
install -d -m 775 %{buildroot}/%{_localstatedir}/lib/mach/roots
#install -d -m 775 %{buildroot}/%{_localstatedir}/tmp/mach
#install -d -m 775 %{buildroot}/%{_localstatedir}/tmp/mach/tmp
install -d -m 775 %{buildroot}/%{_localstatedir}/cache/mach/packages
install -d -m 775 %{buildroot}/%{_localstatedir}/cache/mach/archives

%clean
[ -n "%{buildroot}" -a "%{buildroot}" != / ] && rm -rf %{buildroot}

%pre
# create user and group mach
/usr/sbin/useradd -M mach 2> /dev/null || true

#%preun
#patch -R %{_sysconfdir}/sudoers \
#      < %{_datadir}/%{name}/sudoers.patch > /dev/null 2>&1
#[ $? == 0 ] || \
#  echo "Removing mach commands from %{_sysconfdir}/sudoers failed !"


#%post
#patch %{_sysconfdir}/sudoers \
#      < %{_datadir}/%{name}/sudoers.patch > /dev/null 2>&1
#[ $? == 0 ] || \
#  echo "Adding mach commands to %{_sysconfdir}/sudoers failed !"

%preun
if [ "$1" == 0 ];
then
  # last removal
  # be a good boy and clean out the dirs we filled with junk
  rm -rf %{_localstatedir}/lib/mach/states
  rm -rf %{_localstatedir}/lib/mach/roots
  rm -rf %{_localstatedir}/tmp/mach
  rm -rf %{_localstatedir}/cache/mach
fi

%postun
if [ "$1" == 0 ];
then
  # last removal
  userdel mach
  groupdel mach
fi

%files
%defattr(-,root,root)
%doc ChangeLog README AUTHORS BUGS TODO
%dir %{_sysconfdir}/mach
# make these actual config files when we're happy with the syntax
%config(noreplace) %{_sysconfdir}/mach/packages
%config(noreplace) %{_sysconfdir}/mach/conf
%config(noreplace) %{_sysconfdir}/mach/apt
%attr(-,mach,mach) %dir %{_localstatedir}/lib/mach/states
%attr(-,mach,mach) %dir %{_localstatedir}/lib/mach/roots
