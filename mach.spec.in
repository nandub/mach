# %attr(-,mach,mach) %dir %{_localstatedir}/tmp/mach/tmp
%attr(-,mach,mach) %dir %{_localstatedir}/cache/mach/packages
%attr(-,mach,mach) %dir %{_localstatedir}/cache/mach/archives
